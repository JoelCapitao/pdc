version: '3'

services:
  registry:
    networks:
      - pdc_net
    image: 'registry:2.5'
    restart: always
    ports:
      - 5000:5000
    volumes:
      - '/mnt/registry:/var/lib/registry'


networks:
  pdc_net:
    driver: bridge
    ipam:
      driver: default
      config:
        - subnet: 172.16.238.0/24